<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.sx.easytalk.view.fragment.PluginFragment">

    <ImageView
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/avatar2"/>


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/logout_btn_selector"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/login_text_size"/>

</RelativeLayout>
